<!-- This part loads the entry form to create new goal for the user -->
<div>
	<%= form_for(@goal) do |f| %>
		<div><%= f.label :title %><br>
			<%= f.text_area :title, placeholder: "Create new goal...", class: "form-control" %>
		</div>
		<%= f.submit "Add", class: "btn btn-primary pull-right" %>
	<% end %>
</div>

<% @activities.each do |activity| %>
	
		<div class="activity">
			<%= link_to activity.owner.username, activity.owner if activity.owner %>
			<%= render_activity activity %>
			<br>
			<div class="activity_timestamp">
				<small><%= time_ago_in_words(activity.created_at) %> ago</small>
			</div>
			<%= activity.trackable[:private] %>
			<%= activity.trackable.inspect %>
			<%= activity.inspect %>
		</div>
	
<% end %>

<h1>Profile Page</h1>
<p><%= @user.username %></p>
<p><%= @user.email %></p>

<div>
	<% if @tasks.count > 0 %>
		<ul>
		<% @tasks.each do |t| %>
			<li><%= t.title %>, done:<%= t.done %>,  <%= link_to "Delete", t, method: :delete %>,  
				<% unless t.done? %>
					<%= form_for t do |f| %>
						<%= f.hidden_field :done, :value=> true %>
						<%= f.submit "Done" %>
					<% end %>
				<% else %>
					<%= form_for t do |f| %>
						<%= f.hidden_field :done, :value=> false %>
						<%= f.submit "UnDo" %>
					<% end %>
				<% end %>
			</li> 
		<% end %>
		</ul>
	<% else %>
		<p> Hooray! You have no task left!</p>
	<% end %>
</div>

<div>
	<%= form_for(@task) do |f| %>
		<div><%= f.label :title %><br>
			<%= f.text_field :title, placehodler: "Create new task..." %>
		</div>
		<%= f.submit "Add" %>
	<% end %>
</div>